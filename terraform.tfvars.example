# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values
# DO NOT commit terraform.tfvars to version control!
# Sensitive values should be stored in Terraform Cloud

# API Tokens (required)
# These values should be stored in Terraform Cloud as sensitive variables
# digitalocean_token   = "your_digitalocean_api_token"
# cloudflare_api_token = "your_cloudflare_api_token"
# cloudflare_zone_id   = "your_cloudflare_zone_id"
# cloudflare_account_id = "your_cloudflare_account_id"

# Infrastructure Configuration
region               = "sfo2"
domain_name          = "pausatf.com"
ssh_key_name         = "m3 laptop"
project_name         = "PAUSATF"
create_project       = false
old_server_ip        = ""  # IP of old server to be renamed to old.pausatf.org

# WordPress Configuration
wp_admin_email       = "admin@pausatf.com"
wp_admin_user        = "admin"
admin_email          = "admin@pausatf.com"

# SMTP Configuration (Gmail)
# These values should be stored in Terraform Cloud as sensitive variables
smtp_host            = "smtp.gmail.com"
smtp_port            = 587
# smtp_user            = ""  # Gmail address
# smtp_password        = ""  # Gmail app password
smtp_from_email      = "noreply@pausatf.com"
smtp_from_name       = "PAUSATF WordPress"

# Google Workspace Configuration
google_workspace_enabled = false  # Set to true to enable Google Workspace integration
google_workspace_domain  = "pausatf.com"
# These values should be stored in Terraform Cloud as sensitive variables
# google_workspace_admin_email     = ""  # Admin email for Google Workspace
# google_workspace_customer_id     = ""  # Customer ID from Google Workspace Admin Console
# google_workspace_credentials_json = ""  # Service account credentials JSON content

# SendGrid Configuration
sendgrid_enabled      = false  # Set to true to enable SendGrid integration
# sendgrid_api_key      = ""  # SendGrid API key (store in Terraform Cloud)
sendgrid_from_email   = "noreply@pausatf.com"
sendgrid_from_name    = "PAUSATF WordPress"

# SSH Configuration
ssh_private_key_path  = "~/.ssh/id_rsa"  # Path to SSH private key for server-to-server communication
